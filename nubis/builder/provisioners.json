{
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p -m 755 /var/www/{{user `project_name`}}",
        "sudo chown ubuntu:ubuntu /var/www/{{user `project_name`}}"
      ],
      "order": "1"
    },
    {
      "type": "file",
      "source": "./",
      "destination": "/var/www/{{user `project_name`}}",
      "order": "2"
    },
    {
      "type": "shell",
      "inline": [
        "sudo chown -R root:root /var/www/{{user `project_name`}}"
      ],
      "order": "3"
    },
    {
      "type": "shell",
      "inline": [
        "sudo ln -s /var/www/wiki/index.html /var/www/wiki/core/index.html"
      ],
      "order": "4"
    },
    {
      "type": "shell",
      "inline": [
        "sudo ln -s /var/www/wiki/debug.php /var/www/wiki/core/debug.php"
      ],
      "order": "5"
    }
  ]
}
